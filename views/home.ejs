<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes, viewport-fit=cover">
    <meta name="description" content="DarkBot - Your powerful AI-powered assistant. Chat, generate images, and analyze code with ease.">
    <meta name="theme-color" content="#8b5cf6">
    <title>DarkBot - Premium AI Assistant</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --font-outfit: 'Outfit', sans-serif;
            --accent-gradient: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
            --sharingan-red: #DC143C;
            --glass-bg: rgba(23, 23, 23, 0.7);
            --glass-border: rgba(255, 255, 255, 0.08);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html {
            scroll-behavior: smooth;
            -webkit-text-size-adjust: 100%;
        }

        body {
            overflow-x: hidden !important;
            overflow-y: auto !important;
            height: auto !important;
            width: 100% !important;
            position: relative;
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            background: #080808;
            color: #fff;
        }

        /* Premium Mesh Background */
        .mesh-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: 
                radial-gradient(circle at 0% 0%, rgba(139, 92, 246, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 100% 100%, rgba(220, 20, 60, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 50% 50%, rgba(0, 0, 0, 1) 0%, rgba(8, 8, 8, 1) 100%);
        }

        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem 5%;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            background: rgba(8, 8, 8, 0.7);
            backdrop-filter: blur(15px);
            border-bottom: 1px solid var(--glass-border);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .navbar.scrolled {
            padding: 0.8rem 5%;
            background: rgba(8, 8, 8, 0.98);
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

        .mobile-menu-btn {
            display: none;
            font-size: 24px;
            color: #fff;
            background: transparent;
            border: none;
            cursor: pointer;
            z-index: 1001;
        }

        .nav-logo {
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
        }

        .nav-logo img {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            box-shadow: 0 0 20px rgba(220, 20, 60, 0.4);
            transition: transform 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .nav-logo:hover img {
            transform: rotate(360deg) scale(1.1);
        }

        .nav-logo h1 {
            font-family: var(--font-outfit);
            font-size: 26px;
            font-weight: 800;
            letter-spacing: -0.5px;
            background: linear-gradient(135deg, #fff 0%, #8b5cf6 100%);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .nav-right {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .drawer-divider {
            height: 1px;
            background: rgba(255, 255, 255, 0.08);
            margin: 10px 0;
        }

        .nav-links {
            display: flex;
            align-items: center;
            gap: 2.5rem;
        }

        .nav-link {
            color: #b4b4b4;
            font-weight: 500;
            font-size: 15px;
            transition: all 0.3s ease;
            position: relative;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--accent-gradient);
            transition: width 0.3s ease;
        }

        .nav-link:hover {
            color: #fff;
        }

        .nav-link:hover::after {
            width: 100%;
        }

        .nav-auth-btns {
            display: flex;
            gap: 14px;
        }

        .btn-log {
            padding: 10px 24px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 14px;
            color: #fff;
            border: 1px solid var(--glass-border);
            background: rgba(255, 255, 255, 0.03);
            transition: all 0.3s ease;
        }

        .btn-log:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .btn-join {
            padding: 10px 24px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 14px;
            color: #fff;
            background: var(--accent-gradient);
            box-shadow: 0 4px 15px rgba(139, 92, 246, 0.3);
            transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .btn-join:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(139, 92, 246, 0.4);
        }

        /* Hero Section */
        .hero {
            padding: 200px 5% 120px;
            text-align: center;
            max-width: 1100px;
            margin: 0 auto;
            position: relative;
        }

        .hero-tag {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 10px 24px;
            background: rgba(139, 92, 246, 0.08);
            border: 1px solid rgba(139, 92, 246, 0.2);
            border-radius: 100px;
            color: #a78bfa;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 40px;
            backdrop-filter: blur(5px);
            animation: fadeInDown 0.8s ease-out;
        }

        .desktop-br { display: block; }
        @media (max-width: 768px) {
            .desktop-br { display: none; }
        }

        .hero h2 {
            font-family: var(--font-outfit);
            font-size: clamp(48px, 9vw, 92px);
            font-weight: 800;
            line-height: 0.95;
            margin-bottom: 28px;
            letter-spacing: -3px;
            background: linear-gradient(to bottom, #fff 30%, rgba(255,255,255,0.6) 100%);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: fadeInUp 1s cubic-bezier(0.19, 1, 0.22, 1);
        }

        .hero p {
            font-size: clamp(18px, 2.2vw, 24px);
            color: #a3a3a3;
            max-width: 800px;
            margin: 0 auto 56px;
            line-height: 1.5;
            animation: fadeInUp 1.2s cubic-bezier(0.19, 1, 0.22, 1);
        }

        .hero-actions {
            display: flex;
            justify-content: center;
            gap: 24px;
            flex-wrap: wrap;
            animation: fadeInUp 1.4s cubic-bezier(0.19, 1, 0.22, 1);
        }

        .cta-primary {
            padding: 18px 48px;
            border-radius: 18px;
            font-family: var(--font-outfit);
            font-size: 18px;
            font-weight: 700;
            background: var(--accent-gradient);
            color: #fff;
            display: flex;
            align-items: center;
            gap: 12px;
            box-shadow: 0 20px 40px -10px rgba(139, 92, 246, 0.5);
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .cta-primary:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 30px 60px -10px rgba(139, 92, 246, 0.6);
        }

        .cta-secondary {
            padding: 18px 48px;
            border-radius: 18px;
            font-family: var(--font-outfit);
            font-size: 18px;
            font-weight: 700;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--glass-border);
            color: #fff;
            transition: all 0.3s ease;
        }

        .cta-secondary:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.2);
        }

        /* Features Section */
        .features-container {
            padding: 100px 5%;
            background: rgba(255, 255, 255, 0.01);
            position: relative;
        }

        .features-grid {
            max-width: 1250px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 32px;
        }

        .feature-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid var(--glass-border);
            padding: 48px;
            border-radius: 36px;
            position: relative;
            z-index: 1;
            transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        }

        .feature-card:hover {
            background: rgba(255, 255, 255, 0.04);
            border-color: rgba(139, 92, 246, 0.4);
            transform: translateY(-12px);
            box-shadow: 0 40px 80px -20px rgba(0,0,0,0.5);
        }

        .f-icon {
            width: 72px;
            height: 72px;
            border-radius: 22px;
            background: rgba(139, 92, 246, 0.12);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            color: #8b5cf6;
            margin-bottom: 32px;
            transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .feature-card:hover .f-icon {
            background: #8b5cf6;
            color: #fff;
            transform: scale(1.1) rotate(8deg);
            box-shadow: 0 10px 25px rgba(139, 92, 246, 0.4);
        }

        .feature-card h3 {
            font-family: var(--font-outfit);
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 18px;
            color: #fff;
        }

        .feature-card p {
            color: #a1a1a1;
            line-height: 1.8;
            font-size: 17px;
        }

        /* Animations */
        @keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .float-blob {
            position: absolute;
            width: 450px;
            height: 450px;
            background: rgba(139, 92, 246, 0.18);
            filter: blur(120px);
            border-radius: 50%;
            z-index: -1;
            animation: blobFloat 25s infinite linear;
        }

        @keyframes blobFloat {
            0% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(200px, 100px) scale(1.2); }
            66% { transform: translate(-100px, 200px) scale(0.8); }
            100% { transform: translate(0, 0) scale(1); }
        }

        /* Footer */
        .footer {
            padding: 100px 5% 50px;
            text-align: center;
            border-top: 1px solid var(--glass-border);
            position: relative;
        }

        .footer-logo {
            display: inline-flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 32px;
            text-decoration: none;
        }

        .footer-logo img {
            width: 36px;
            height: 36px;
            border-radius: 50%;
        }

        .footer p {
            color: #666;
            font-size: 15px;
            letter-spacing: 0.5px;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .navbar { padding: 1.2rem 4%; }
            .hero h2 { font-size: clamp(48px, 8vw, 76px); }
            .features-grid { grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); }
        }

        @media (max-width: 768px) {
            .navbar { padding: 0.8rem 5%; }
            .nav-auth-btns { display: none; }
            .mobile-menu-btn { display: block; font-size: 22px; }
            .nav-logo img { width: 32px; height: 32px; }
            .nav-logo h1 { font-size: 19px; }
            
            .nav-links { display: none; }
            
            .hero { padding: 120px 4% 60px; }
            .hero-tag { font-size: 10px; padding: 6px 14px; margin-bottom: 18px; }
            .hero h2 { font-size: 2.8rem; letter-spacing: -1.2px; line-height: 1; margin-bottom: 20px; }
            .hero p { font-size: 16px; margin-bottom: 32px; line-height: 1.4; padding: 0 4%; }
            
            .hero-actions { flex-direction: column; gap: 12px; padding: 0 6%; }
            .cta-primary, .cta-secondary { 
                padding: 14px 20px; 
                font-size: 16px; 
                justify-content: center;
                border-radius: 12px;
                width: 100%;
                box-shadow: none; /* Reduce visual noise on mobile */
            }

            .features-container { padding: 40px 4%; }
            .features-grid { grid-template-columns: 1fr; gap: 16px; }
            .feature-card { padding: 24px; border-radius: 18px; }
            .feature-card h3 { font-size: 20px; margin-bottom: 12px; }
            .feature-card p { font-size: 15px; }
            .f-icon { width: 48px; height: 48px; font-size: 18px; margin-bottom: 16px; }
        }

        /* Mobile Drawer Styles */
        .mobile-drawer {
            position: fixed;
            top: 0;
            right: -100%;
            width: 80%;
            max-width: 300px;
            height: 100%;
            background: #0d0d0d;
            z-index: 2000;
            transition: right 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
            padding: 30px 20px;
            box-shadow: -10px 0 30px rgba(0,0,0,0.5);
            border-left: 1px solid var(--glass-border);
        }

        .mobile-drawer.active { right: 0; }

        .drawer-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.6);
            backdrop-filter: blur(4px);
            z-index: 1500;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

        .drawer-overlay.active { opacity: 1; visibility: visible; }

        .drawer-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 40px;
        }

        .close-drawer {
            background: transparent;
            border: none;
            color: #fff;
            font-size: 24px;
        }

        .drawer-links {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .drawer-link {
            font-size: 18px;
            color: #b4b4b4;
            font-weight: 500;
            text-decoration: none;
            padding: 10px 0;
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }

        .drawer-btn {
            padding: 14px;
            border-radius: 12px;
            text-align: center;
            font-weight: 700;
            text-decoration: none;
            margin-top: 10px;
        }

        .drawer-btn.primary { background: var(--accent-gradient); color: #fff; }
        .drawer-btn.outline { border: 1px solid var(--glass-border); color: #fff; }

        @media (max-width: 480px) {
            .hero h2 { font-size: 2.5rem; line-height: 1; letter-spacing: -1px; }
            .hero p { font-size: 15px; }
            .navbar { padding: 0.8rem 5%; }
            .nav-logo h1 { font-size: 18px; }
            /* On tiny screens, hide label to prevent overflow if needed, but for now let's keep it compact */
        }
    </style>
</head>
<body>
    <div class="mesh-bg"></div>
    <div class="float-blob" style="top: -10%; left: -5%;"></div>
    <div class="float-blob" style="bottom: 5%; right: -5%; background: rgba(220, 20, 60, 0.12);"></div>

    <!-- Navbar -->
    <nav class="navbar" id="navbar">
        <a href="/" class="nav-logo">
            <img src="/img/sharingan-logo.svg" alt="DarkBot">
            <h1>DarkBot</h1>
        </a>
        
        <div class="nav-links">
            <a href="#features" class="nav-link">Features</a>
            <a href="https://github.com/princekumar9234" target="_blank" class="nav-link">Developer</a>
            <a href="/login" class="nav-link">Account</a>
        </div>

        <div class="nav-right">
            <div class="nav-auth-btns">
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/chat" class="btn-join">Open Dashboard</a>
                <% } else { %>
                    <a href="/login" class="btn-log">Log In</a>
                    <a href="/signup" class="btn-join">Get Started</a>
                <% } %>
            </div>
            <button class="mobile-menu-btn" id="mobileMenuBtn">
                <i class="fas fa-bars-staggered"></i>
            </button>
        </div>
    </nav>

    <!-- Mobile Drawer -->
    <div class="mobile-drawer" id="mobileDrawer">
        <div class="drawer-header">
            <a href="/" class="nav-logo">
                <img src="/img/sharingan-logo.svg" alt="DarkBot">
                <h1>DarkBot</h1>
            </a>
            <button class="close-drawer" id="closeDrawer">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="drawer-links">
            <a href="#features" class="drawer-link" onclick="toggleDrawer()">Features</a>
            <a href="https://github.com/princekumar9234" target="_blank" class="drawer-link">Developer</a>
            <a href="/login" class="drawer-link">Account</a>
            <div class="drawer-divider"></div>
            <% if (typeof user !== 'undefined' && user) { %>
                <a href="/chat" class="drawer-btn primary">Open Dashboard</a>
            <% } else { %>
                <a href="/login" class="drawer-btn outline">Log In</a>
                <a href="/signup" class="drawer-btn primary">Get Started</a>
            <% } %>
        </div>
    </div>
    <div class="drawer-overlay" id="drawerOverlay"></div>

    <!-- Hero Section -->
    <main class="hero">
        <div class="hero-tag">
            <i class="fas fa-sparkles"></i>
            Ultimate intelligence, redefined for you
        </div>
        <h2>Intelligence in its <br class="desktop-br"> Darkest Form</h2>
        <p>Harness the power of world-class AI models wrapped in a stunning, premium dark interface. Built for thinkers, creators, and innovators.</p>
        
        <div class="hero-actions">
            <a href="/chat" class="cta-primary">
                <%= (typeof user !== 'undefined' && user) ? 'Continue Journey' : 'Begin Your Journey' %>
                <i class="fas fa-bolt"></i>
            </a>
            <% if (!(typeof user !== 'undefined' && user)) { %>
                <a href="/signup" class="cta-secondary">Join the Evolution</a>
            <% } %>
        </div>
    </main>

    <!-- Features Section -->
    <section class="features-container" id="features">
        <div class="features-grid">
            <div class="feature-card">
                <div class="f-icon"><i class="fas fa-microchip"></i></div>
                <h3>Hyper-Fast Core</h3>
                <p>Lightning quick responses fueled by custom-tuned Gemini 1.5 and GPT-4o models. No lag, just pure intelligence.</p>
            </div>
            <div class="feature-card">
                <div class="f-icon"><i class="fas fa-wand-magic-sparkles"></i></div>
                <h3>Visual Genesis</h3>
                <p>Create hyper-realistic images and art descriptions directly into reality. Multimodality at your fingertips.</p>
            </div>
            <div class="feature-card">
                <div class="f-icon"><i class="fas fa-shield-halved"></i></div>
                <h3>Enterprise Privacy</h3>
                <p>Your data stays yours. Private encryption layers ensure your conversations are secure and confidential.</p>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <a href="/" class="footer-logo">
            <img src="/img/sharingan-logo.svg" alt="DarkBot">
            <span style="font-weight: 800; font-family: 'Outfit'; font-size: 24px; color: #fff;">DarkBot</span>
        </a>
        <p>&copy; 2026 DarkBot Intelligence System. Crafted with passion.</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Navbar scroll effect
            window.addEventListener('scroll', () => {
                const nav = document.getElementById('navbar');
                if (window.scrollY > 40) {
                    nav.classList.add('scrolled');
                } else {
                    nav.classList.remove('scrolled');
                }
            });

            // Smooth scroll implementation
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    const target = document.querySelector(targetId);
                    if (target) {
                        const headerOffset = 80;
                        const elementPosition = target.getBoundingClientRect().top;
                        const offsetPosition = elementPosition + (window.pageYOffset || document.documentElement.scrollTop) - headerOffset;

                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Mobile Drawer Logic
            const drawer = document.getElementById('mobileDrawer');
            const overlay = document.getElementById('drawerOverlay');
            const menuBtn = document.getElementById('mobileMenuBtn');
            const closeBtn = document.getElementById('closeDrawer');

            function toggleDrawer() {
                if (!drawer || !overlay) return;
                drawer.classList.toggle('active');
                overlay.classList.toggle('active');
                document.body.style.overflow = drawer.classList.contains('active') ? 'hidden' : 'auto';
            }

            if (menuBtn) menuBtn.addEventListener('click', toggleDrawer);
            if (closeBtn) closeBtn.addEventListener('click', toggleDrawer);
            if (overlay) overlay.addEventListener('click', toggleDrawer);

            // Initial check for scroll position
            if (window.scrollY > 40) {
                const nav = document.getElementById('navbar');
                if (nav) nav.classList.add('scrolled');
            }
        });
    </script>
</body>
</html>
